@model CalculadoraMVC.Models.Usuario

@{
    ViewData["Title"] = "Inicio de Sesión";
}

<div class="container my-5">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-6 col-lg-4">
            <h1 class="text-center mb-4 display-4">@ViewData["Title"]</h1>
            <form asp-action="Login" asp-controller="Login" method="post">
                <div class="form-group">
                    <label for="Email">Correo electrónico</label>
                    <input type="email" class="form-control" id="Email" name="Email" placeholder="Ingrese su correo electrónico" required>
                </div>
                <div class="form-group">
                    <label for="Password">Contraseña</label>
                    <input type="password" class="form-control" id="Password" name="Password" placeholder="Ingrese su contraseña" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block"><i class="bi bi-box-arrow-in-right"></i> Ingresar</button>

            </form>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="text-center mt-4" style="height: 80px;">
                <p>¿No tienes una cuenta? <a href="@Url.Action("Index","Register")">Regístrate aquí</a>.</p>
            </div>
        </div>
    </div>
</div>
