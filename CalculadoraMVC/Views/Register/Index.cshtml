@model CalculadoraMVC.Models.Usuario

@{
    ViewData["Title"] = "Registro";
}

<div class="container my-5">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-6 col-lg-4">
            <h1 class="text-center mb-4 display-4">@ViewData["Title"]</h1>
            <hr />

            <form method="post" asp-action="Index">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control text-center" asp-for="Email" required autocomplete="off">
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label>Contraseña</label>
                    <input type="password" class="form-control text-center" asp-for="Password" required autocomplete="off">
                </div>
                <hr />
                <div class="d-flex justify-content-between align-items-center">
                    <button type="submit" class="btn btn-primary mr-auto">Registrar</button>
                    <a asp-action="Index" asp-controller="Login" class="btn btn-danger ml-auto">Volver</a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
