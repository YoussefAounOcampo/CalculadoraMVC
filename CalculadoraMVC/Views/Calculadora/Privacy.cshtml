@model IEnumerable<Operacion>

@{
    ViewData["Title"] = "Historial de operaciones";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="container text-center">
    <div class="d-flex justify-content-center">
        <div style="width: 60%;">
            <table class="table table-striped table-bordered table-hover" style="text-align: center;">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">IdOperacion</th>
                        <th scope="col">IdUsuario</th>
                        <th scope="col">Operación</th>
                        <th scope="col">Resultado</th>
                        <th scope="col">Fecha Registrada</th>
                        <th scope="col">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.IdUsuario</td>
                            <td>@item.OperacionString</td>
                            <td>@item.Resultado</td>
                            <td>@item.Fecha</td>
                            <td class="text-center">
                                <form asp-action="Delete" asp-route-id="@item.Id">
                                    <button type="submit" class="btn btn-danger align-middle">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<a asp-action="Index" asp-route-id="@CurrentUser.Id" class="btn btn-primary" style="display: block; margin: 10px auto; width: 50%;">Volver</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .thead-dark {
        background-color: #343a40;
        color: #fff;
        font-weight: bold;
    }
</style>
