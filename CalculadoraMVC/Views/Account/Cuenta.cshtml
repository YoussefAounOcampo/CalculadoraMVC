@model CalculadoraMVC.Models.Usuario


  <h1>
        Mi Cuenta
    </h1>
    <hr />
<div class="container text-center">
    <div class="d-flex justify-content-center">
        <div style="width: 60%;">
            <table class="table table-striped table-bordered table-hover" style="text-align: center; padding-left:20%;">
                <thead class="thead-dark">
                    <tr>
                       <th scope="col">Icon</th>
                        <th scope="col">Correo electrónico</th>
                        <th scope="col">Contraseña</th>
                        <th scope="col">Acción</th>
                    </tr>
                </thead>
                 <tbody>
                            <tr>
                                <td><img src="~/Images/user.png" alt="Imagen de usuario" style="width: 60px; height: 60px; border-radius: 50%;"></td>
                                <td>@Model.Email</td>
                                <td>@Model.Password</td>
                                <td class="text-right">
                                    <a asp-controller="Account" asp-action="Editar" class="btn btn-danger">Administrar</a>
                                </td>
                            </tr>
                        </tbody>
               
            </table>
        </div>
    </div>
</div>

<a asp-action="Index" asp-controller="Calculadora" asp-route-id="@CurrentUser.Id" class="btn btn-primary" style="display: block; margin: 10px auto; width: 50%;">Volver</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .thead-dark {
        background-color: #343a40;
        color: #fff;
        font-weight: bold;
    }
</style>