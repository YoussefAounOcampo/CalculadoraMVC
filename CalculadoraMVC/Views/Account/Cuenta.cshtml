@model Usuario

<div class="container my-5">
    <h1>Mi Cuenta</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="w-100">
                <table class="table text-center">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Contraseña</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Email</td>
                            <td>@Model.Password</td>
                            <td class="text-right">
                                <a asp-controller="Account" asp-action="Editar" class="btn btn-primary">Administrar</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
